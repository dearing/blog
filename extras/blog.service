[Unit]
Description=blogging with go, markdown and redis
After=syslog.target network.target
After=redis.service

[Service]
User=myuser
Group=mygroup
Type=simple
ExecStart=/home/myuser/wwwroot/blog/blog -wwwhost=:9000 -verbose=true
WorkingDirectory=/home/myuser/wwwroot/blog
Restart=always

[Install]
WantedBy=multi-user.target
